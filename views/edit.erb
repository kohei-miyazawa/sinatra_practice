<form action="/memos/<%= @memo[0]["id"] %>" method="post">
  <h3>タイトル</h3>
  <div>
    <input type="text" class="form" name="title" value="<%= h(@memo[0]["title"]) %>" input required>
  </div>
  <h3>内容</h3>
  <div>
    <textarea name="body" class="form body_form" input required><%= h(@memo[0]["body"]) %></textarea>
  </div>
  <input type="hidden" name="_method" value="patch">
  <input type="submit" class="btn" value="変更">
</form>
